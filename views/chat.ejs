    <script>
        let messageCount = 0;

        function sendMessage() {
            const input = document.getElementById('chatInput');
            const message = input.value.trim();
            
            if (message) {
                addMessage(message, 'user');
                input.value = '';
                
                // Simulate response after a short delay
                setTimeout(() => {
                    respondToMessage(message);
                }, 1000);
            }
        }

        function quickQuestion(question) {
            addMessage(question, 'user');
            
            setTimeout(() => {
                respondToMessage(question);
            }, 1000);
        }

        function addMessage(text, sender) {
            const messages = document.getElementById('chatMessages');
            const time = new Date().toLocaleTimeString([], { hour: '2-digit', minute: '2-digit' });
            
            const messageDiv = document.createElement('div');
            messageDiv.className = `message ${sender}`;
            messageDiv.innerHTML = `
                <div class="message-avatar">${sender === 'user' ? 'üë§' : 'ü§ñ'}</div>
                <div class="message-content">
                    <p>${text}</p>
                    <div class="message-time">${time}</div>
                </div>
            `;
            
            messages.appendChild(messageDiv);
            messages.scrollTop = messages.scrollHeight;
        }

        function respondToMessage(userMessage) {
            const responses = {
                default: "Thank you for your message. One of our agents will assist you shortly.",
                password: "To reset your password, click on 'Forgot Password' on the login page. You'll receive an email with instructions.",
                transfer: "To transfer money, go to the Transfer page and enter the recipient's account number and amount.",
                card: "You can apply for a card by going to the Card Services page and clicking 'Apply Now'.",
                limits: "Standard limits: Daily $5,000, Weekly $25,000, Monthly $100,000. Verified users get higher limits.",
                address: "You can update your address in Profile Settings.",
                hours: "Our support team is available 24/7. Phone lines are open 8am-8pm Monday-Friday.",
                support: "You can reach us by phone at +44 7362 593627 or email at support@saxonsavingunion.com.",
                branch: "Our main branch is at 123 High Street, London. You can find other locations in our app.",
                '2fa': "To enable 2FA, go to Security Settings and follow the setup instructions."
            };

            let response = responses.default;
            const lowerMsg = userMessage.toLowerCase();
            
            if (lowerMsg.includes('password') || lowerMsg.includes('reset')) {
                response = responses.password;
            } else if (lowerMsg.includes('transfer') || lowerMsg.includes('send money')) {
                response = responses.transfer;
            } else if (lowerMsg.includes('card') || lowerMsg.includes('apply')) {
                response = responses.card;
            } else if (lowerMsg.includes('limit')) {
                response = responses.limits;
            } else if (lowerMsg.includes('address') || lowerMsg.includes('update')) {
                response = responses.address;
            } else if (lowerMsg.includes('hour') || lowerMsg.includes('business')) {
                response = responses.hours;
            } else if (lowerMsg.includes('contact') || lowerMsg.includes('phone') || lowerMsg.includes('call')) {
                response = responses.support;
            } else if (lowerMsg.includes('branch') || lowerMsg.includes('location')) {
                response = responses.branch;
            } else if (lowerMsg.includes('2fa') || lowerMsg.includes('two factor')) {
                response = responses['2fa'];
            }

            addMessage(response, 'support');
        }
    </script>
