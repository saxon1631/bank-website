<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= title %></title>
    <link rel="stylesheet" href="/css/style.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@300;400;500;600;700&display=swap" rel="stylesheet">
</head>
<body>
    <!-- Navigation -->
    <nav class="navbar">
        <div class="nav-container">
            <div class="nav-brand">
                <i class="fas fa-university"></i>
                <span>Saxon Bank</span>
            </div>
            <div class="nav-links">
                <a href="/dashboard" class="nav-link">
                    <i class="fas fa-home"></i> Dashboard
                </a>
                <a href="/deposit" class="nav-link active">
                    <i class="fas fa-money-bill-wave"></i> Deposit
                </a>
                <a href="/transfer" class="nav-link">
                    <i class="fas fa-exchange-alt"></i> Transfer
                </a>
                <a href="/transactions" class="nav-link">
                    <i class="fas fa-history"></i> Transactions
                </a>
                <div class="user-menu">
                    <span class="user-name"><i class="fas fa-user-circle"></i><%= user.name %><</span>
                    <div class="user-dropdown">
                        <a href="/dashboard"><i class="fas fa-home"></i> Dashboard</a>
                        <a href="#"><i class="fas fa-cog"></i> Settings</a>
                        <a href="/logout"><i class="fas fa-sign-out-alt"></i> Logout</a>
                    </div>
                </div>
            </div>
        </div>
    </nav>

    <!-- Main Content -->
    <div class="container">
        <!-- Back Button -->
        <a href="/dashboard" class="back-btn">
            <i class="fas fa-arrow-left"></i> Back to Dashboard
        </a>

        <!-- Deposit Header -->
        <div class="page-header">
            <h1>Deposit Funds</h1>
            <p class="subtitle">Add money to your Saxon Bank account</p>
        </div>

        <!-- Success/Error Messages -->
        <% if (typeof success !== 'undefined' && success) { %>
            <div class="alert success">
                <i class="fas fa-check-circle"></i>
                <p><%= success.replace(/\+/g, ' ') %></p>
            </div>
        <% } %>
        
        <% if (typeof error !== 'undefined' && error) { %>
            <div class="alert error">
                <i class="fas fa-exclamation-circle"></i>
                <p><%= error.replace(/\+/g, ' ') %></p>
            </div>
        <% } %>

        <div class="deposit-container">
            <!-- Current Balance Card -->
            <div class="balance-card-large">
                <div class="balance-header">
                    <h3>Current Balance</h3>
                    <i class="fas fa-wallet"></i>
                </div>
                <p class="balance-amount">$<%= user.balance.toLocaleString('en-US', { minimumFractionDigits: 2, maximumFractionDigits: 2 }) %></p>
                <p class="balance-subtext">Available for withdrawal</p>
            </div>

            <!-- Deposit Form -->
            <div class="form-card">
                <h2><i class="fas fa-plus-circle"></i> Make a Deposit</h2>
                
                <form action="/deposit" method="POST" class="deposit-form">
                    <div class="form-group">
                        <label for="amount">
                            <i class="fas fa-money-bill-wave"></i> Amount to Deposit
                        </label>
                        <div class="amount-input">
                            <span class="currency">$</span>
                            <input type="number" 
                                   id="amount" 
                                   name="amount" 
                                   step="0.01" 
                                   min="1" 
                                   max="10000" 
                                   placeholder="0.00"
                                   required>
                        </div>
                        <p class="form-hint">Minimum: $1.00 | Maximum: $10,000.00</p>
                    </div>

                    <div class="form-group">
                        <label for="description">
                            <i class="fas fa-file-alt"></i> Description (Optional)
                        </label>
                        <input type="text" 
                               id="description" 
                               name="description" 
                               placeholder="e.g., PayPal transfer, Salary deposit">
                    </div>

                    <!-- Quick Amount Buttons -->
                    <div class="quick-amounts">
                        <p class="section-label">Quick Select:</p>
                        <div class="amount-buttons">
                            <button type="button" class="amount-btn" data-amount="50">$50</button>
                            <button type="button" class="amount-btn" data-amount="100">$100</button>
                            <button type="button" class="amount-btn" data-amount="500">$500</button>
                            <button type="button" class="amount-btn" data-amount="1000">$1,000</button>
                        </div>
                    </div>

                    <!-- Deposit Method -->
                    <div class="form-group">
                        <label>
                            <i class="fas fa-credit-card"></i> Deposit Method
                        </label>
                        <div class="method-options">
                            <label class="method-option">
                                <input type="radio" name="method" value="card" checked>
                                <div class="method-content">
                                    <i class="fas fa-credit-card"></i>
                                    <div>
                                        <h4>Debit Card</h4>
                                        <p><%= user.cardNumber ? '**** **** **** ' + user.cardNumber.slice(-4) : 'No card linked' %></p>
                                    </div>
                                </div>
                            </label>
                            <label class="method-option">
                                <input type="radio" name="method" value="bank">
                                <div class="method-content">
                                    <i class="fas fa-university"></i>
                                    <div>
                                        <h4>Bank Transfer</h4>
                                        <p>1-3 business days</p>
                                    </div>
                                </div>
                            </label>
                        </div>
                    </div>

                    <!-- Security Note -->
                    <div class="security-note">
                        <i class="fas fa-shield-alt"></i>
                        <p>Your deposit is secured with 256-bit SSL encryption. Funds are available immediately.</p>
                    </div>

                    <!-- Submit Button -->
                    <button type="submit" class="submit-btn">
                        <i class="fas fa-lock"></i> Secure Deposit
                    </button>
                </form>
            </div>

            <!-- Deposit Information -->
            <div class="info-card">
                <h3><i class="fas fa-info-circle"></i> Deposit Information</h3>
                <div class="info-list">
                    <div class="info-item">
                        <i class="fas fa-bolt"></i>
                        <div>
                            <h4>Instant Processing</h4>
                            <p>Most deposits are available immediately</p>
                        </div>
                    </div>
                    <div class="info-item">
                        <i class="fas fa-lock"></i>
                        <div>
                            <h4>Secure & Protected</h4>
                            <p>Bank-level security on all transactions</p>
                        </div>
                    </div>
                    <div class="info-item">
                        <i class="fas fa-headset"></i>
                        <div>
                            <h4>24/7 Support</h4>
                            <p>Need help? Contact our support team</p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Footer -->
    <footer class="footer">
        <div class="footer-content">
            <p>Â© 2026 Saxon Bank. All rights reserved.</p>
            <div class="footer-links">
                <a href="#">Privacy Policy</a>
                <a href="#">Terms of Service</a>
                <a href="#">Support</a>
                <a href="#">Contact Us</a>
            </div>
        </div>
    </footer>

    <!-- JavaScript -->
    <script>
        // Quick amount buttons
        document.querySelectorAll('.amount-btn').forEach(button => {
            button.addEventListener('click', function() {
                const amount = this.getAttribute('data-amount');
                document.getElementById('amount').value = amount;
                
                // Visual feedback
                document.querySelectorAll('.amount-btn').forEach(btn => {
                    btn.classList.remove('active');
                });
                this.classList.add('active');
            });
        });

        // Form validation
        document.querySelector('.deposit-form').addEventListener('submit', function(e) {
            const amountInput = document.getElementById('amount');
            const amount = parseFloat(amountInput.value);
            
            if (amount < 1) {
                e.preventDefault();
                alert('Minimum deposit amount is $1.00');
                amountInput.focus();
                return;
            }
            
            if (amount > 10000) {
                e.preventDefault();
                alert('Maximum deposit amount is $10,000.00');
                amountInput.focus();
                return;
            }
        });

        // User dropdown
        document.querySelector('.user-name').addEventListener('click', function(e) {
            e.stopPropagation();
            this.parentElement.classList.toggle('show');
        });

        document.addEventListener('click', function() {
            document.querySelector('.user-menu').classList.remove('show');
        });
    </script>
</body>
</html>
